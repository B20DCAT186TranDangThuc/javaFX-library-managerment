<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.study.library.controller.BookController"
            stylesheets="@css/book.css"
            prefWidth="1200" prefHeight="1000">
    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <!-- HEADER -->
        <fx:include source="header-view.fxml" fx:id="headerPane"/>

        <!-- THÔNG TIN SÁCH -->
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tìm kiếm:"/>
                <TextField fx:id="searchField" promptText="Nhập tên sách hoặc tác giả"/>
                <Button fx:id="btnSearch" text="Tìm kiếm" />
            </HBox>

            <ListView fx:id="listBooks" prefHeight="400" styleClass="book-list"/>
        </VBox>

        <!-- NÚT THAO TÁC -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="btnAdd" text="Thêm Sách" />
            <Button fx:id="btnEdit" text="Chỉnh Sửa" />
            <Button fx:id="btnDelete" text="Xóa Sách" />
        </HBox>
    </VBox>
</AnchorPane>