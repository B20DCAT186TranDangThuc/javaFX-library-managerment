            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.study.library.controller.HeaderController"
            stylesheets="@css/header.css"
>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <FontIcon fx:id="iconPage" iconLiteral="fas-home" iconSize="32" iconColor="#3498db"/>
        <VBox spacing="5">
            <Label fx:id="lblPageTitle" text="TRANG CHỦ" styleClass="page-title"/>
            <Label fx:id="lblCurrentTime" text="Thứ Hai, 01/01/2024 - 10:30:00" styleClass="subtitle"/>
        </VBox>
    </HBox>
</AnchorPane>